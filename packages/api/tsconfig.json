{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "$common": ["src/common"],
      "$common/*": ["src/common/*"],
      "$middlewares": ["src/middlewares"],
      "$routes": ["src/routes"],
      "$routes/*": ["src/routes/*"],
      "$types": ["src/types"],
      "$types/*": ["src/types/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
